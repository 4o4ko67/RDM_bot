<%- include("includes/head", { bot, user, path, title: "Contact" }) %>

<link rel="stylesheet" type="text/css" href="/css/contact.css" />
<div class="container-contact">
  <div class="wrap-contact">
    <form class="contact-form validate-form">
      <span class="contact-form-title"></span>
      <div class="wrap-input rs1-wrap-input">
        <span class="label">Name</span>
        <input
          disabled
          class="input"
          maxlenght="100"
          autocomplete="off"
          spellcheck="false"
          type="text"
          name="name"
          placeholder="Name"
          value="<%= user.username %>#<%= user.discriminator %>"
        />
        <span class="input-line"></span>
      </div>
      <div class="wrap-input rs1-wrap-input">
        <span class="label">Email</span>
        <input
          class="input"
          type="email"
          maxlenght="100"
          autocomplete="off"
          spellcheck="false"
          name="email"
          placeholder="Email"
        />
        <span class="input-line"></span>
      </div>
      <div class="wrap-input">
        <span class="label">Message</span>
        <textarea
          class="input"
          name="message"
          maxlenght="2000"
          autocomplete="off"
          spellcheck="true"
          placeholder="Message"
          required
        ></textarea>
        <span class="input-line"></span>
      </div>
      <div class="wrap-input rs1-wrap-input noactive">
        <span class="label">Name</span>
        <input
          class="input"
          title="Please login to contact us!"
          maxlenght="100"
          autocomplete="off"
          spellcheck="false"
          type="text"
          name="name"
          placeholder="Name"
          disabled
        />
        <span class="input-line"></span>
      </div>
      <div class="wrap-input rs1-wrap-input noactive">
        <span class="label">Email</span>
        <input
          class="input"
          title="Please login to contact us!"
          maxlenght="100"
          autocomplete="off"
          spellcheck="false"
          type="email"
          name="email"
          placeholder="Email"
          disabled
        />
        <span class="input-line"></span>
      </div>
      <div class="wrap-input noactive">
        <span class="label">Message</span>
        <textarea
          class="input"
          title="Please login to contact us!"
          maxlenght="2000"
          autocomplete="off"
          spellcheck="true"
          name="message"
          placeholder="Message"
          disabled
        ></textarea>
        <span class="input-line"></span>
      </div>
      <div id="captcha"></div>
      <div class="container-contact-form-btn">
        <button
          class="link-button green"
          style="margin-top: 50px; margin-left: 0px"
          type="submit"
        >
          Send
        </button>
      </div>
    </form>
  </div>
</div>
<script src="/js/contact.js"></script>
